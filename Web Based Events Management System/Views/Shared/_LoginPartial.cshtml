@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm" }))
    {
        @Html.AntiForgeryToken()

        <ul class="navbar-nav ml-auto">
            <li class="nav-item">
                @Html.ActionLink("Hello " + User.Identity.GetUserName() + "!", "Index", "Manage", routeValues: null, htmlAttributes: new { title = "Manage" })
            </li>
        </ul>

        <ul class="navbar-nav ml-auto">
            <li class="nav-item"><a href="javascript:document.getElementById('logoutForm').submit()" id="registerLink" class="nav-link">Log Out</a></li>
        </ul>

        <script>
            var l = document.getElementById('logout');
            if (typeof (l) != 'undefined' && l != null)
                l.style.display = "inline";
        </script>
        <noscript>
            <input type="submit" value="Log Off" />
        </noscript>
    }
}
else
{
    <ul class="navbar-nav ml-auto">
        <li class="nav-item"><a href="/Account/Register" id="registerLink" class="nav-link">Register</a></li>
        <li class="nav-item"><a href="/Account/Login" id="loginLink" class="nav-link">Log in</a></li>
    </ul>
}
